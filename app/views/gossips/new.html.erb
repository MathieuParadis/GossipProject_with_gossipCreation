<div class = "mt-5 mx-3">
    <div>

        <% flash.each do |type, msg| %>
        <div class="alert alert-danger">
            <%= msg.join("<br />").html_safe %>
        </div>
        <% end %>
        

        <div>
            <h1>Cr√©ation d'un potin</h1>
        <div>

        <%= form_tag url_for(action: 'create'), method: "post" do %>

            <%= label_tag 'Titre de mon potin' %>
            <%= text_field_tag 'gossip_title' %>
            <br /> <br />

            <%= label_tag 'Contenu de mon potin' %>
            <%= text_area_tag 'gossip_content' %>
            <br /> <br />


            <%= submit_tag "Enregistrer mon Potin" %>
        <% end %>

    </div>
</div>

